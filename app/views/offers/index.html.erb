<p style="color: green"><%= notice %></p>

<h1>Offers</h1>

<div id="offers">
  <% @offers.each do |offer| %>
    <%= render offer %>
    <p>
      <%= link_to "Show this offer", offer %>
    </p>
  <% end %>
</div>
<% if user_signed_in? && current_user.isadmin %>
  <%= link_to "New offer", new_offer_path %>
<% end %>
